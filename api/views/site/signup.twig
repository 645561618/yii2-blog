</div>
</body>
</html>
 <script>
	$(function(){
		$('#sign_sub').click(function(){
			var username = $('#reg_username').val();
			var phone = $('#reg_phone').val();
			var password = $('#reg_password').val();
			var pwd = $('#reg_pwd').val();
			if(username==''){
				$('.reg_messagewarm').html('用户名不能为空')
		                $('.reg_message').show();
			}else if(phone==''){
				$('.reg_messagewarm').html('手机号不能为空')
                                $('.reg_message').show();
			}else if(password==''){
				$('.reg_messagewarm').html('密码不能为空')
                                $('.reg_message').show();

			}else if(pwd == ''){
				$('.reg_messagewarm').html('重复密码不能为空')
                                $('.reg_message').show();
			}else{
				if(password==pwd){
					$("#sign_form").submit();
                                }else{
                                        $('.reg_messagewarm').html('密码不一致')
                                        $('.reg_message').show();
                                }

			}
		})
		
	})

</script>


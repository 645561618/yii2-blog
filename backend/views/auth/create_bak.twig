{% set sidebar_name = "创建角色" %}
{% set menu_name = "managers" %}
<div class="content">
    <h4>创建角色或权限Create New Item*</h4>
{% block content %}
<div class="container">
    <div class="srbacForm">
      <p> Fields with* <span class="required">*</span> are required*. </p>
      {% set form = activeform.begin({'id':'create-form','options':{'enctype':'multipart/form-data'}}) %}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AuthItem_name">Name* <span class="required">*</span></label>    
                <input type="text" maxlength="64" id="AuthItem_name" name="AuthItem[name]" class="form-control" size="20">  
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AuthItem_type">Type* <span class="required">*</span></label>    
                <select id="AuthItem_type" name="AuthItem[type]" class="form-control">
                    <option value="1">Role</option>
                    <option value="2">Operation</option>
                </select>  
            </div>
            <div class="form-group">
                <label  class="col-sm-2 control-label" for="AuthItem_description">Description*</label>    
                <textarea id="AuthItem_description" name="AuthItem[description]" cols="20" rows="3" class="form-control"></textarea>  
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AuthItem_rule_name">Rule-Name*</label>    
                <input type="text" id="AuthItem_rule_name" name="AuthItem[rule_name]" size="30" class="form-control">
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AuthItem_data">Data*</label>    
                <textarea id="AuthItem_data" name="AuthItem[data]" cols="20" rows="3" class="form-control"></textarea>  
            </div>
            <input type="hidden" id="oldName" name="oldName">  <div class="action">
            <input type="button" id="saveButton2" value="Create*" name="saveButton2" class="btn btn-default">  </div>
            <div style="visibility:hidden" class="message" id="mess">
            $message
            </div>
      </form>
    </div>
</div>
{% endblock %}
</div>

{% set sidebar_name = "添加标签" %}
{% set menu_name = "blog" %}
{% block content %}
<div class="content">
{% if isNew == true %}
    <h3>添加标签</h3>
{% else %}
    <h3>编辑标签</h3>
{% endif %}
    {% set form = form_begin({'id':'create-form','layout':'horizontal','options':{'enctype':'multipart/form-data'}}) %}
    <div id="uploads" class="form-group ">
        {{ form.field(model, 'title')|raw }}
        {{ form.field(model, 'sort')|raw }}
        {{ form.field(model,'status').widget('kartik\\widgets\\SwitchInput')|raw }}
    </div>
    <div class="form-group ">
        <label for="dailylesson-params" class="control-label col-sm-3"></label>
        <div class="col-sm-6">
            <input type='submit' value='提交' class='btn btn-large btn-primary' />
        </div>
    </div>
    {{ void(form.end()) }}

</div>
{% endblock %}


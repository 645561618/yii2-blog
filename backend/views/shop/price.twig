{% set sidebar_name = "设置订单金额" %}
{% set menu_name = "shop" %}
{% include "@app/views/layouts/header.twig" %}
{% block content %}
<div class="content">
    <h4>设置订单金额</h4>
    <div class="row-fluid">
        {% set form = form_begin({'id':'create-form','layout':'horizontal','options':{'enctype':'multipart/form-data'}}) %}
        <div id="uploads" class="form-group ">
            {{ form.field(model, 'id').textInput({'readonly':true})|raw }}
            {{ form.field(model, 'username').textInput({'readonly':true})|raw }}
            {{ form.field(model, 'phone').textInput({'readonly':true})|raw }}
            {{ form.field(model, 'price').textInput()|raw }}
        </div>
        <div class="form-group ">
            <label for="dailylesson-params" class="control-label col-sm-3"></label>
            <div class="col-sm-6">
                <input type='submit' value='提交' class='btn btn-large btn-primary' />
            </div>
        </div>
        {{ void(form.end()) }}
    </div>
</div>
{% endblock %}

